<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Search Views -->

        <!-- Form Views -->
        <record model="ir.ui.view" id="view_order_form">
            <field name="name">sale.order.form.inherit.gard_product_uom_pack</field>
            <field name="model">sale.order</field>
            <field name="mode">extension</field>
            <field name="priority">19</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">

                <!-- add domain to product_uom -->
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom']"
                    position="before">
                    <field name="product_uom_ids" invisible="1" />
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom']"
                    position="attributes">
                    <attribute name="domain">[('id', 'in', product_uom_ids)]</attribute>
                    <attribute name="options">{'no_create_edit': True, 'no_open': True}</attribute>
                </xpath>

            </field>
        </record>


        <!-- Actions -->

    </data>
</odoo>