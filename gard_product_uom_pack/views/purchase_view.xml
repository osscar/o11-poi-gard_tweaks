<?xml version="1.0"?>
<openerp>
  <data>


    <record id="purchase_order_form" model="ir.ui.view">
      <field name="name">purchase.order.form.inherit.gard_order_history</field>
      <field name="model">purchase.order</field>
      <field name="mode">extension</field>
      <!-- <field name="priority">18</field> -->
      <field name="inherit_id" ref="purchase.purchase_order_form" />
      <field name="arch" type="xml">

        <!-- add domain to product_uom -->
        <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom']"
          position="before">
          <field name="product_uoms" invisible="1" />
        </xpath>
        <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom']"
          position="attributes">
          <attribute name="domain">[('id', 'in', product_uoms)]</attribute>
        </xpath>

      </field>
    </record>

  </data>
</openerp>