<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="group_request_user" model="res.groups">
            <field name="name">Refund Request User</field>
            <field name="category_id" ref="base.module_category_accounting_and_finance" />
        </record>

        <record id="group_request_manager" model="res.groups">
            <field name="name">Refund Request Manager</field>
            <field name="category_id" ref="base.module_category_accounting_and_finance" />
            <field name="users" eval="[(4, ref('base.user_root'))]" />
        </record>

        <record id="account.group_account_invoice" model="res.groups">
            <field name="implied_ids"
                eval="[(4, ref('gard_account_invoice_refund.group_request_user'))]" />
        </record>

        <!-- Record Rules -->
        <!-- multi-company -->
        <record model="ir.rule" id="account_invoice_refund_request_rule">
            <field name="name">account_invoice_refund_request multi-company</field>
            <field name="model_id" ref="model_account_invoice_refund_request" />
            <field name="global" eval="True" />
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>

        <!-- User Rules -->
        <record id="rule_account_invoice_refund_request_user" model="ir.rule">
            <field name="name">User's Requests</field>
            <field name="model_id" ref="model_account_invoice_refund_request" />
            <field name="groups" eval="[(4, ref('group_request_user'))]" />
            <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
        </record>

        <record id="rule_account_invoice_refund_request_manager" model="ir.rule">
            <field name="name">Refund Request Manager</field>
            <field name="model_id" ref="model_account_invoice_refund_request" />
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_request_manager'))]" />
        </record>

    </data>
</odoo>