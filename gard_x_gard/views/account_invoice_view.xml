<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <!-- Search Views -->

        <!-- Views -->
        <record model="ir.ui.view" id="invoice_supplier_form">
            <field name="name">account.invoice.supplier.form.inherit.gard_x_gard</field>
            <field name="model">account.invoice</field>
            <field name="mode">extension</field>
            <field name="priority">10</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_invoice_open']" position="attributes">
                    <attribute name="confirm">Please revise the inputed data and check that the correct journal has been selected. Validate?</attribute>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']//field[@name='account_id']" position="attributes">
                    <attribute name="groups">gard_x_gard.group_account_invoice_purchase</attribute>
                </xpath>

                <xpath expr="//field[@name='tax_line_ids']//field[@name='account_id']" position="attributes">
                    <attribute name="groups">gard_x_gard.group_account_invoice_purchase</attribute>
                </xpath>

                <!-- <xpath expr="//field[@name='invoice_line_ids']//field[@name='account_id']" position="attributes">
                    <attribute name="groups">gard_x_gard.group_account_invoice_purchase</attribute>
                </xpath> -->

                <xpath expr="//page[@name='other_info']//field[@name='move_id']" position="attributes">
                    <attribute name="groups">gard_x_gard.group_account_invoice_purchase</attribute>
                </xpath>

                <xpath expr="//page[@name='other_info']//field[@name='journal_id']" position="attributes">
                    <attribute name="groups">gard_x_gard.group_account_invoice_purchase</attribute>
                </xpath>

                <xpath expr="//notebook/page[2]//field[@name='account_id']" position="attributes">
                    <attribute name="groups">gard_x_gard.group_account_invoice_purchase</attribute>
                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="invoice_form">
            <field name="name">account.invoice.form.inherit.gard_x_gard</field>
            <field name="model">account.invoice</field>
            <field name="mode">extension</field>
            <field name="priority">10</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">

                <!-- add validation before validating invoice -->
                <xpath expr="//button[@name='action_invoice_open']" position="attributes">
                    <attribute name="confirm">Please check all the data before validating. Validate?</attribute>
                </xpath>

                <!-- place 'origin' field after 'number' field -->
                <xpath expr="//h1/div" position="after">
                    [<field name="origin"/>]
                </xpath>

            </field>
        </record>

        <!-- Actions -->

        <!-- Menus -->


</odoo>
