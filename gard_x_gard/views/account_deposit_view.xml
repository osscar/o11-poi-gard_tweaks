<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <!-- Search Views -->

        <!-- Views -->
        <record model="ir.ui.view" id="view_account_deposit_form">
            <field name="name">account.deposit.form.inherit.gard_x_gard</field>
            <field name="model">account.deposit</field>
            <field name="mode">extension</field>
            <field name="priority">10</field>
            <field name="inherit_id" ref="poi_x_gard.view_account_deposit_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet/field[@name='id']" position="before">
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_payments"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            attrs="{'invisible': [('payment_count', '=', 0)]}">
                            <field name="payment_count" widget="statinfo" string="Payments"/>
                        </button>
                    </div>
                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="view_account_deposit_tree">
            <field name="name">account.deposit.tree.inherit.gard_x_gard</field>
            <field name="model">account.deposit</field>
            <field name="mode">extension</field>
            <field name="priority">10</field>
            <field name="inherit_id" ref="poi_x_gard.view_account_deposit_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='amount_usd']" position="after">
                    <field name="payment_count"/>
                </xpath>

            </field>
        </record>

        <!-- Actions -->

        <!-- Menus -->

</odoo>
