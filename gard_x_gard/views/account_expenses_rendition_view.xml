<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <!-- Search Views -->
        <record id="view_account_expenses_rendition_invoice_search"  model="ir.ui.view">
            <field name="name">account.expenses.rendition.invoice.search</field>
            <field name="model">account.expenses.rendition.invoice</field>
            <field name="arch" type="xml">

                <search string="Payments">
                    <field name="name" filter_domain="['|', '|', '|', '|', ('name','ilike',self),
                        ('cc_nro','ilike',self), ('payment_request_id','ilike',self), ('rendition_id','ilike',self), ('partner_id','ilike',self)]" string="Nombre"/>
                    <separator/>
                    <field name="payment_request_id"/>
                    <field name="rendition_id"/>
                    <field name="cc_nro"/>
                    <field name="cc_aut"/>
                    <field name="cc_cod"/>
                    <field name="cc_fecha"/>
                    <field name="account_id"/>
                    <field name="taxes_ids"/>
                    <separator/>
                    <filter string="SIN validado" domain="[('estado_fac','=','V')]" name='estado_fac_V'/>
                    <filter string="SIN anulado" domain="[('estado_fac','=','A')]" name='estado_fac_A'/>
                    <filter string="Rendicion realizada" domain="[('state','=','done')]" name='state_done'/>
                    <filter string="Rendicion cancelada" domain="[('state','=','cancel')]" name='state_cancel'/>
                    <separator/>
                    <filter string="Solicitud de pago" domain="[]" context="{'group_by': 'payment_request_id'}"/>
                    <filter string="Rendición" domain="[]" context="{'group_by': 'rendition_id'}"/>
                    <filter string="Estado SIN" domain="[]" context="{'group_by': 'estado_fac'}"/>
                    <filter string="Estado Rendicion" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Cuenta" domain="[]" context="{'group_by': 'account_id'}"/>
                    <filter string="Cuenta analítica" domain="[]" context="{'group_by': 'account_analytic_id'}"/>
                    <filter string="Tipo de compra" domain="[]" context="{'group_by': 'tipo_com'}"/>
                    <filter string="Fecha de factura" domain="[]" context="{'group_by': 'cc_fecha'}"/>
                </search>

            </field>
        </record>

        <!-- Views -->
        <record id="view_account_expenses_rendition_invoice_form" model="ir.ui.view">
            <field name="name">account.expenses.rendition.invoice.form</field>
            <field name="model">account.expenses.rendition.invoice</field>
            <field name="arch" type="xml">
                <form string="Facturas de rendición" version="7">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <field name="id" invisible="1"/>
                        <div>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group string="Control SIN">
                                <field name="cc_nro" string="Nr.Fact."/>
                                <field name="cc_aut" widget="mask" data-inputmask-alias="integer"/>
                                <field name="cc_cod" widget="mask" data-inputmask-mask="##-##-##-##-##" data-inputmask-placeholder=""/>
                                <field name="nit" widget="mask" data-inputmask-alias="integer"/>
                                <field name="razon"/>
                                <field name="cc_fecha"/>
                                <field name="monto_iva"/>
                                <field name="exento" sum="Exento total" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="ice" sum="ICE total" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="tipo_com"/>
                                <field name="estado_fac"/>
                            </group>
                            <group>
                                <field name="monto" sum="Total" invisible="1"/>
                                <field name="monto_neto" invisible="1"/>
                                <field name="descuento" sum="desc total" string="Desc." attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="partner_id" options="{'no_create': True}"/>
                                <field name="imp_pol" string="Nr.Poliza Import."/>
                            </group>
                            <group>
                                <field name="account_id" attrs="{'readonly': [('state','!=','draft')]}" options="{'no_create': True}"/>
                                <field name="account_analytic_id" attrs="{'readonly': [('state','!=','draft')]}" options="{'no_create': True}"/>
                                <field name="taxes_ids" widget="many2many_tags" attrs="{'readonly': [('state','!=','draft')]}" options="{'no_create': True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Información">
                                <group string="Tipo">
                                    <field name="tipo_fac"/>
                                    <field name="invoice_type"/>
                                </group>
                                <group string="Documentos relacionados">
                                    <field name="payment_request_id"/>
                                    <field name="rendition_id"/>
                                    <field name="rendition_move_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_account_expenses_rendition_invoice_tree" model="ir.ui.view">
            <field name="name">account.expenses.rendition.invoice.tree</field>
            <field name="model">account.expenses.rendition.invoice</field>
            <field name="arch" type="xml">

                <tree decoration-info="state=='draft'"
                    decoration-muted="state=='cancel'"
                    decoration-danger="(state in 'done' and estado_fac not in 'V') or (state in 'cancel' and estado_fac in 'V') or (state in 'confirmed' and cc_fecha &lt; current_date)"
                    decoration-success="state in 'done' and estado_fac in 'V'" edit="false">
                    <field name="payment_request_id"/>
                    <field name="rendition_id"/>
                    <field name="rendition_move_id"/>
                    <field name="cc_fecha"/>
                    <field name="account_id"/>
                    <field name="account_analytic_id"/>
                    <field name="monto" sum="Total"/>
                    <field name="descuento" sum="desc total" string="Desc."/>
                    <field name="tipo_com"/>
                    <field name="partner_id"/>
                    <field name="nit"/>
                    <field name="razon"/>
                    <field name="cc_nro" string="Nr.Fact."/>
                    <field name="imp_pol" string="Nr.Poliza Import."/>
                    <field name="cc_aut"/>
                    <field name="ice" sum="ICE total"/>
                    <field name="exento" sum="Exento total"/>
                    <field name="taxes_ids" widget="many2many_tags"/>
                    <field name="monto_neto"/>
                    <field name="monto_iva"/>
                    <field name="cc_cod"/>
                    <field name="state"/>
                    <field name="estado_fac"/>
                </tree>
            </field>
        </record>

        <!-- Actions -->
        <record id="action_account_expenses_rendition_invoice" model="ir.actions.act_window">
            <field name="name">Facturas de rendición</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.expenses.rendition.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
            <!-- <field name="search_view_id" ref="view_account_expenses_rendition_invoice_search"/> -->
        </record>

        <!-- Menus -->
        <menuitem action="action_account_expenses_rendition_invoice" id="menu_action_account_expenses_rendition_invoice"
            parent="account.menu_finance_payables" sequence="20"/>

</odoo>
