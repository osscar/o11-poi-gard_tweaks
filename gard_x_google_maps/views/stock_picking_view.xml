<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- web_google_maps customizations -->
    <record id="view_stock_picking_map" model="ir.ui.view">
        <field name="name">view.stock.picking.map</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <map class="o_res_partner_map" library="geometry" string="Map" lat="partner_latitude" lng="partner_longitude" >
            <!-- colors="blue:company_type=='person';green:company_type=='company';"> -->
                <field name="partner_id"/>
                <field name="partner_latitude"/>
                <field name="partner_longitude"/>
                <field name="color"/>
                <field name="display_name"/>
                <!-- <field name="batch_picking_id"/> -->
                <field name="partner_street"/>
                <field name="partner_city"/>
                <field name="partner_state_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_res_partner_kanban">
                            <div class="o_kanban_image">
                                <img t-att-src='_s + "/base/static/src/img/truck.png"' class="o_kanban_image oe_kanban_avatar_smallbox"/>
                            </div>
                            <div class="oe_kanban_details">
                                <field name="scheduled_date"/>
                                <ul>
                                    <!-- <li>
                                        <strong class="o_kanban_record_title oe_partner_heading">
                                            <field name="batch_picking_id"/>
                                        </strong>
                                    </li> -->
                                    <li>
                                        <strong class="o_kanban_record_title oe_partner_heading">
                                            <field name="display_name"/>
                                        </strong>
                                    </li>
                                    <li>
                                        <strong class="o_kanban_record_title oe_partner_heading">
                                            <field name="origin"/>
                                        </strong>
                                    </li>
                                </ul>
                                <ul>
                                    <li><field name="partner_street"/></li>
                                    <li><field name="partner_state_id"/></li>
                                    <li><field name="partner_city"/></li>
                                    <li><field name="partner_country_id"/></li>
                                </ul>
                                <div class="oe_kanban_partner_links"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </map>
        </field>
    </record>
    <record id="stock.action_picking_tree_all" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form,calendar,map</field>
    </record>
    <record id="stock.action_picking_tree_all3" model="ir.actions.act_window.view">
        <field eval="3" name="sequence"/>
        <field name="view_mode">map</field>
        <field name="view_id" ref="view_stock_picking_map"/>
        <field name="act_window_id" ref="stock.action_picking_tree_all"/>
    </record>
    
