<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <!-- Search Views -->

        <!-- Views -->
        <record id="product_product_tree_view" model="ir.ui.view">
            <field name="name">product.product.tree.inherit.gard_product_stock_qty</field>
            <field name="model">product.product</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='default_code']" position="before">
                    <button
                        name="button_product_stock_quantity"
                        string="Product Stock Quantity"
                        attrs="{'invisible':[('qty_available', '&lt;', '1')]}"
                        type="object"
                        icon="fa-dropbox fa-gard-icon-orange fa-2x"
                        />
                </xpath>

            </field>
        </record>

        <record id="product_kanban_view" model="ir.ui.view">
            <field name="name">product.kanban.inherit.gard_product_stock_qty</field>
            <field name="model">product.product</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_kanban_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='lst_price']" position="before">
                    <field name="qty_available"/>
                </xpath>

                <xpath expr="/kanban//templates/t//div" position="inside">
                    <div class="col-xs-4 pull-right">
                        <button
                            name="button_product_stock_quantity"
                            string="Product Stock Quantity"
                            attrs="{'invisible':[('qty_available', '&lt;', '1')]}"
                            type="object"
                            class="fa fa-dropbox fa-gard-icon-orange pull-right"
                            />
                    </div>
                </xpath>

            </field>
        </record>

        <!-- Actions -->

        <!-- Menus -->
</odoo>
