        <!-- Actions -->
        <record id="action_account_invoice_refund_request" model="ir.actions.act_window">
            <field name="name">Invoice Refund Requests</field>
            <field name="res_model">account.invoice.refund.request</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_account_invoice_refund_request_tree" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_account_invoice_refund_request_filter" />
        </record>

