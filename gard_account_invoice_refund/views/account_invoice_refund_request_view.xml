<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Search Views -->
        <record id="view_account_invoice_refund_request_filter" model="ir.ui.view">
            <field name="name">account.invoice.refund.request.select</field>
            <field name="model">account.invoice.refund.request</field>
            <field name="arch" type="xml">
                <search string="Search Invoice">
                    <field name="name" string="Invoice"
                        filter_domain="['|','|', ('name','ilike',self), ('invoice_id','ilike',self), ('user_id', 'ilike', self)" />
                    <filter name="draft" string="Draft" domain="[('state','=','draft')]" />
                    <filter name="request" string="Requested" domain="[('state', '=', 'request')]" />
                    <filter name="done" string="Done" domain="[('state', '=', 'done')]" />
                    <filter name="done" string="Cancelled" domain="[('state', '=', 'cancel')]" />
                    <filter name="late" string="Overdue"
                        domain="['&amp;', ('date_request', '&lt;', time.strftime('%%Y-%%m-%%d')), ('state', '=', 'request')]"
                        help="Overdue refund requests." />
                    <separator />
                    <field name="user_id" string="Assigned User" domain="[('share','=', False)]" />
                    <field name="request_user_id" string="Requested By"
                        domain="[('share','=', False)]" />
                    <field name="invoice_user_id" string="Salesperson"
                        domain="[('share','=', False)]" />
                    <field name="date_request" string="Date Requested" />
                    <field name="date_done" string="Date Done" />
                    <field name="invoice_id" string="Invoice" />
                    <field name="invoice_type" string="Invoice Type" />
                    <field name="refund_invoice_id" string="Invoice" />
                    <separator />
                    <filter domain="[('state','!=','done')]" help="Pending" />
                    <separator />
                    <filter domain="[('request_user_id','=',uid)]" help="My Requests" />
                    <filter domain="[('user_id','=',uid)]" help="My Assigned Requests" />
                    <filter string="My Activities" name="activities_my"
                        domain="[('activity_ids.user_id', '=', uid)]" />
                    <separator />
                    <filter string="Late Activities" name="activities_overdue"
                        domain="[('activity_ids.date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]"
                        help="Show all records which has next action date is before today" />
                    <filter string="Today Activities" name="activities_today"
                        domain="[('activity_ids.date_deadline', '=', context_today().strftime('%Y-%m-%d'))]" />
                    <filter string="Future Activities" name="activities_upcoming_all"
                        domain="[('activity_ids.date_deadline', '&gt;', context_today().strftime('%Y-%m-%d'))
                        ]" />
                    <group expand="0" string="Group By">
                        <filter string="Assigned User" context="{'group_by':'user_id'}" />
                        <filter string="Requested By" context="{'group_by':'request_user_id'}" />
                        <filter string="Invoiced By" context="{'group_by':'invoice_user_id'}" />
                        <separator />
                        <filter string="Invoice Type" context="{'group_by':'invoice_type'}" />
                        <filter string="Reason" context="{'group_by':'reason'}" />
                        <separator />
                        <filter name="status" string="Status" context="{'group_by':'state'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- Tree Views -->
        <record id="view_account_invoice_refund_request_tree" model="ir.ui.view">
            <field name="name">account.invoice.refund.request.tree</field>
            <field name="model">account.invoice.refund.request</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'request'" decoration-muted="state == 'cancel'"
                    string="Invoice Refund Request">
                    <field name="invoice_type" />
                    <field name="name" string="Name" />
                    <field name="date_request" />
                    <field name="date_done" />
                    <field name="user_id" />
                    <field name="request_user_id" />
                    <field name="stock_move_pending_qty" />
                    <field name="invoice_id" />
                    <field name="invoice_user_id" />
                    <field name="invoice_date" />
                    <field name="reason" />
                    <field name="description" />
                    <field name="refund_invoice_id" />
                    <field name="refund_invoice_date" />
                    <field name="state" />
                </tree>
            </field>
        </record>


        <!-- Form Views -->
        <record id="view_account_invoice_refund_request_form" model="ir.ui.view">
            <field name="name">account.invoice.refund.request.form</field>
            <field name="model">account.invoice.refund.request</field>
            <field name="arch" type="xml">
                <form string="Invoice" class="o_invoice_form">
                    <header>
                        <button name="button_assign_user_id" type="object"
                            string="Reassign Request"
                            attrs="{'invisible':[('state','not in',('draft','request'))]}"
                            class="oe_highlight" />
                        <button name="button_assign_user_id" type="object"
                            string="Reassign Exception"
                            attrs="{'invisible':[('state','!=','except')]}"
                            class="oe_highlight" groups="gard_account_invoice_refund.group_request_manager" />
                        <button name="button_invoice_payment_unreconcile" type="object"
                            string="Unreconcile Payments"
                            attrs="{'invisible':['|','|',('state','not in',('request','except')),('invoice_payment_ids','=',[]),('refund_invoice_id','!=',False)]}"
                            class="oe_highlight" />
                        <button name="button_invoice_siat_cancel" type="object"
                            string='SIAT Cancel'
                            attrs="{'invisible': ['|','|','|',('state','!=','request'),('invoice_type','!=','out_invoice'),('stock_move_pending_qty','!=',0),('siat_state','in',('error','anulada'))]}"
                            class="oe_highlight"
                            groups="gard_account_invoice_refund.group_request_manager" />
                        <button name="button_invoice_refund" type="object"
                            string='Refund'
                            attrs="{'invisible': ['|','|','|',('state','not in',('request','except')),('invoice_type','!=','out_invoice'),('siat_state','=','online'),('refund_invoice_id','!=',False)]}"
                            class="oe_highlight"
                            groups="gard_account_invoice_refund.group_request_manager" />
                        <field name="state" widget="statusbar" nolabel="1"
                            statusbar_visible="draft,request,done" />
                    </header>
                    <sheet string="Invoice Refund Request">
                        <div class="oe_button_box" name="button_box">
                            <div class="oe_inline info-box oe_invoice_state">
                                <span class="info-box-icon">
                                    <i class="fa fa-2x fa-check-circle" style="color: darkslateblue"
                                        attrs="{'invisible': [('state','!=','done')]}"></i>
                                    <i class="fa fa-2x fa-times-circle" style="color: darkred"
                                        attrs="{'invisible': [('state','=','done')]}"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text">
                                        <field string="Estado SIAT" name="siat_state_display" />
                                    </span>
                                    <span> | </span>
                                    <span>
                                        <i class="fa fa-check" style="color: darkslateblue"
                                            attrs="{'invisible': [('siat_state','not in',('anulada','error'))]}"></i>
                                        <i class="fa fa-times" style="color: darkred"
                                            attrs="{'invisible': [('siat_state','in',('anulada','error'))]}"></i>
                                    </span>
                                </div>
                                <div class="info-box-content">
                                    <span class="info-box-text">
                                        <field string="Estado SIN" name="estado_fac_display" />
                                    </span>
                                    <span> | </span>
                                    <span>
                                        <i class="fa fa-check" style="color: darkslateblue"
                                            attrs="{'invisible': [('estado_fac','!=','A')]}"></i>
                                        <i class="fa fa-times" style="color: darkred"
                                            attrs="{'invisible': [('estado_fac','=','A')]}"></i>
                                    </span>
                                </div>
                                <div class="info-box-content">
                                    <field name="stock_move_pending_qty" invisible="1" />
                                    <span class="info-box-text">
                                        <field string="Qty. Pending"
                                            name="stock_move_pending_qty_display" />
                                    </span>
                                    <span> | </span>
                                    <span>
                                        <i class="fa fa-dropbox" style="color: darkslateblue"
                                            attrs="{'invisible': ['&amp;',('stock_move_pending_qty','!=',0),('siat_state','not in',('error','anulada'))]}"></i>
                                        <i class="fa fa-dropbox" style="color: darkred"
                                            attrs="{'invisible': ['|',('stock_move_pending_qty','=',0),'&amp;',('state','in',('except','done')),('siat_state','in',('error','anulada'))]}"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <field name="invoice_type" invisible="1" />
                        <label string="Purchase Refund"
                            attrs="{'invisible': [('invoice_type','!=','in_invoice')]}" />
                        <label string="Sale Refund"
                            attrs="{'invisible': [('invoice_type','!=','out_invoice')]}" />
                        <h1 class="mt0">
                            <field name="name" readonly="1" class="oe_inline" />
                        </h1>
                        <group colspan="4">
                            <group>
                                <field name="user_id" />
                                <field name="request_user_id" />
                                <separator />
                                <field name="invoice_sale_order_ids" widget="many2many_tags"
                                    attrs="{'invisible': [('invoice_sale_order_ids','=',[])]}" />
                                <field name="invoice_purchase_order_ids" widget="many2many_tags"
                                    attrs="{'invisible': [('invoice_purchase_order_ids','=',[])]}" />
                                <field name="reason" />
                                <field name="description" />
                            </group>
                            <group>
                                <field name="date_request" />
                                <field name="date_done"
                                    attrs="{'invisible': [('date_done','=',False)]}" />
                            </group>
                        </group>
                        <notebook colspan="2">
                            <page string="Invoices &amp; Refunds">
                                <group>
                                    <group>
                                        <field name="invoice_user_id" />
                                        <field name="company_id" />
                                        <field name="invoice_id" />
                                        <field name="invoice_date" />
                                        <field name="invoice_state" />
                                        <field name="siat_state" />
                                        <field name="estado_fac" />
                                    </group>
                                    <group>
                                        <field name="refund_invoice_id" />
                                        <field name="refund_invoice_date" />
                                        <field name="refund_invoice_state" />
                                    </group>
                                </group>
                            </page>
                            <page string="Pickings &amp; Payments">
                                <field name="invoice_payment_ids" widget="one2many_list"
                                    attrs="{'invisible':[('invoice_payment_ids','=',[])]}" />
                                <field name="invoice_picking_ids" widget="one2many_list"
                                    attrs="{'invisible':[('invoice_picking_ids','=',[])]}"
                                    force_save="1">
                                    <tree>
                                        <field name="is_locked" invisible="1" />
                                        <field name="state" />
                                        <field name="date" />
                                        <field name="date_done" />
                                        <field name="group_id" />
                                        <field name="name" />
                                        <field name="origin" />
                                        <field name="partner_id" />
                                        <field name="location_id" />
                                        <field name="location_dest_id" />
                                        <field name="backorder_id" />
                                        <field name="requested_by" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                            groups="base.group_user" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

