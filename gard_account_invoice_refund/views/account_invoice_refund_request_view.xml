        </record>

        <!-- Menus -->
        <!-- Adviser sub-menus -->
        <menuitem id="menu_finance_entries_accounting_invoices" name="Invoices"
            parent="account.menu_finance_entries" />

        <menuitem action="action_account_invoice_refund_request"
            id="menu_action_invoice_refund_request"
            parent="menu_finance_entries_accounting_invoices"
            sequence="1" />

        <!-- Payables & Receivables -->
        <menuitem action="action_account_invoice_in_refund_request"
            id="menu_action_account_invoice_in_refund_request"
            parent="account.menu_finance_payables_documents"
            sequence="1" />

        <menuitem action="action_account_invoice_out_refund_request"
            id="menu_action_account_invoice_out_refund_request"
            parent="account.menu_finance_receivables_documents"
            sequence="1" />

