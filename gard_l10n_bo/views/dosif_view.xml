<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Views -->
        <record id="local_dosif_view_tree" model="ir.ui.view">
            <field name="name">plocal_dosif_view_tree.inherit.gard_l10n_bo</field>
            <field name="model">poi_bol_base.cc_dosif</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="poi_bol_base.local_dosif_view_tree"/>
            <field name="arch" type="xml">

                <!-- add journal_id -->
                <xpath expr="//field[@name='warehouse_id']" position="after">
                    <field name="journal_id"/>
                </xpath>

            </field>
        </record>

        <record id="local_dosif_view_form" model="ir.ui.view">
            <field name="name">local_dosif_view_form.inherit.gard_l10n_bo</field>
            <field name="model">poi_bol_base.cc_dosif</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="poi_bol_base.local_dosif_view_form"/>
            <field name="arch" type="xml">

                <!-- add journal_id -->
                <xpath expr="//field[@name='warehouse_id']" position="after">
                    <field name="journal_id" readonly="1"  attrs="{'required':[('warehouse_id','not in',[])]}"/>
                </xpath>

            </field>
        </record>

        <!-- Actions -->

        <!-- Menus -->
    </data>
</odoo>
