<odoo>
  <data>

    <record id="view_siat_cancel_invoice_form" model="ir.ui.view">
      <field name="name">siat.cancel.invoice.form</field>
      <field name="model">siat.cancel.invoice</field>
      <field name="arch" type="xml">
        <form string="Cancel SIAT Invoices">
          <!-- <group name="cancel_form">
                        <notebook>
                            <page name="invoice_lines" string="Select Invoices">
                                <button name="button_product_ids_clear" type="object" attrs="{'invisible':[('product_ids', '=',
                    [])]}" class="btn-primary" string="Clear Products"/>
                                <separator/>
                                <field name="invoice_ids" onstring="Select Invoices">
                                </field>
                            </page>
                        </notebook>
                    </group> -->
          <group name="cancel_form_lines">
            <notebook>
              <page name="wizard_lines" string="Create Line Values">
                <!-- <button name="button_create_wizard_line" type="object"
                  class="btn-primary" string="Add Products" /> -->
                <button name="button_wizard_line_unlink" type="object"
                  attrs="{'invisible':[('wizard_line', '=', [])]}"
                  class="btn-default" string="Clear Lines" />
                <separator />
                <field name="wizard_line">
                  <tree editable="bottom">
                    <field name="company_id" />
                    <field name="emision_code" />
                    <field name="dosif_id" />
                    <field name="cc_nro" />
                    <field name="nit" />
                    <field name="motivo_code" />
                    <field name="cuf" />
                  </tree>
                </field>
              </page>
            </notebook>
          </group>
          <footer>
            <button string="Cancel Invoices" name="button_siat_cancel_invoices" type="object"
              class="btn-primary" />
            <button string="Cancel" class="btn-default" special="cancel" />
          </footer>
        </form>
      </field>
    </record>

    <record id="action_view_siat_cancel_invoice" model="ir.actions.act_window">
      <field name="name">SIAT Cancel Invoice</field>
      <field name="res_model">siat.cancel.invoice</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_siat_cancel_invoice_form" />
      <field name="target">new</field>
    </record>

    <menuitem action="action_view_siat_cancel_invoice" id="menu_siat_cancel_invoice" name="SIAT Cancel Invoice"
