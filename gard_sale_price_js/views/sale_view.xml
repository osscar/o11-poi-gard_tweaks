<?xml version="1.0"?>
<odoo>

        <!-- View Customizations -->
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">view.order.form.inherit.gard_sale_price</field>
            <field name="model">sale.order</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <!-- product pricelist items button -->
                <xpath expr="/form//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <button name="get_pricelist_items" type="object"
                        context="{'xml_id':'product_pricelist_item_action_sale'}"
                        icon="fa-2x fa-tags fa-gard-icon-orange"
                        string="Pricelist Items"/>
                </xpath>

            </field>
        </record>

        <!-- Actions -->

        <!-- Menus -->

</odoo>
