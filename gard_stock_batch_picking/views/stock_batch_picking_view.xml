<odoo>

    <record model="ir.ui.view" id="stock_batch_picking_search">
        <field name="name">batch.picking.search.inherit</field>
        <field name="model">stock.batch.picking</field>
        <field name="mode">extension</field>
        <field name="priority">10</field>
        <field name="inherit_id" ref="stock_batch_picking.stock_batch_picking_search" />
        <field name="arch" type="xml">

            <!-- add fields -->
            <field name="picker_id" position="after">
                <field name="name"
                    filter_domain="['|','|',('name','ilike',self),('vehicle_id','ilike',self),('driver_id','ilike',self)]" />
                <field name="picking_ids" />
                <field name="driver_id" />
                <field name="vehicle_id" />
            </field>
            <group position="after">
                <filter string="Driven by Me" name="driver_my" domain="[('driver_id','=',uid)]" />
                <filter string="Picked by Me" name="pick_my" domain="[('picker_id','=',uid)]" />
            </group>
            <filter name="picker_id" position="after">
                <filter name="group_by_driver_id" string="Driver" context="{'group_by':'driver_id'}" />
                <filter name="group_by_vehicle_id" string="Vehicle"
                    context="{'group_by':'vehicle_id'}" />
            </filter>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_batch_picking_tree">
        <field name="name">stock.batch.picking.tree.inherit</field>
        <field name="model">stock.batch.picking</field>
        <field name="inherit_id" ref="stock_batch_picking.stock_batch_picking_tree" />
        <field name="arch" type="xml">
            <field name="date" position ="replace"/>
            <field name="name" position ="before">
                <field name="date"/>
            </field>
            <field name="picker_id" position ="after">
                <field name="driver_id"/>
                <field name="vehicle_id"/>
            </field>
        </field>
    </record>

    <record id="stock_batch_picking_form" model="ir.ui.view">
        <field name="name">stock.batch.picking.form.inherit</field>
        <field name="model">stock.batch.picking</field>
        <field name="inherit_id" ref="stock_batch_picking.stock_batch_picking_form" />
        <field name="arch" type="xml">
            <field name="name" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
            <field name="picker_id" position="replace" />
            <field name="date" position="replace">
                <group>
                    <field name="picker_id" />
                    <field name="date" />
                </group>
                <group>
                    <field name="vehicle_id" />
                    <field name="odometer_start" force_save="1" />
                    <field name="odometer_end" />
                    <field name="driver_id" />
                    <field name="assistant_ids" widget="many2many_tags" />
                </group>
            </field>
        </field>
    </record>

</odoo>