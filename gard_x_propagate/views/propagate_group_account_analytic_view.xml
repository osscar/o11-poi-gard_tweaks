<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Search Views -->
    <record id="view_propagate_group_account_analytic_search" model="ir.ui.view">
      <field name="name">propagate.group.account.analytic.search</field>
      <field name="model">propagate.group.account.analytic</field>
      <field name="arch" type="xml">
        <search string="Search Propagate Groups">
          <field name="name" string="Name"
            filter_domain="['|', ('name','ilike',self), ('parent_id','ilike',self)]" />
          <field name="parent_id" />
          <separator />
          <filter name="active" string="Active" domain="[('active','=',True)]" />
          <separator />
          <group expand="0" string="Group By">
            <filter name="group_by_parent_id" string="Parent" />
          </group>
        </search>
      </field>
    </record>

    <!-- Form Views -->
    <record id="view_propagate_group_account_analytic_form" model="ir.ui.view">
      <field name="name">propagate.group.account.analytic.form</field>
      <field name="model">propagate.group.account.analytic</field>
      <!-- <field name="type">form</field> -->
      <field name="arch" type="xml">
        <form string="Propagate Group">
          <header>
            <div class="oe_button_box" name="button_box">
              <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive">
                <field name="active" widget="boolean_button" options='{"terminology": "archive"}' />
              </button>
            </div>
          </header>
          <sheet string="Propagate Groups">
            <div class="oe_title">
              <h1>
                <field name="name" placeholder="Enter Group Name" />
              </h1>
            </div>
            <group name="main">
              <field name="name" />
              <field name="type" />
              <field name="parent_id" />
            </group>
            <notebook>
              <page name="account_values" string="Account Values">
                <field name="account_value_ids">
                  <tree editable="bottom">
                    <field name="name" />
                    <field name="code" />
                    <field name="is_parent" />
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Tree Views -->
    <record id="view_propagate_group_account_analytic_tree" model="ir.ui.view">
      <field name="name">propagate.group.account.analytic.tree</field>
      <field name="model">propagate.group.account.analytic</field>
      <!-- <field name="type">tree</field> -->
      <field name="arch" type="xml">
        <tree string="Propagate Group">
          <field name="name" />
          <field name="parent_id" />
        </tree>
      </field>
    </record>

    <!-- Actions -->
    <record id="action_propagate_group_account_analytic" model="ir.actions.act_window">
      <field name="name">Propagate Groups</field>
      <!-- <field name="type">ir.actions.act_window</field> -->
      <field name="res_model">propagate.group.account.analytic</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_propagate_group_account_analytic_tree" />
      <field name="search_view_id" ref="view_propagate_group_account_analytic_search" />
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to add a new propagation group.
        </p>
      </field>
    </record>

    <!-- Menus -->
    <menuitem
      id="menu_propagate_group_account_analytic"
      parent="account.menu_analytic_accounting"
      action="action_propagate_group_account_analytic"
      sequence="20" />

  </data>
</odoo>