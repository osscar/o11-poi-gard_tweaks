<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <!-- Search Views -->

        <!-- Views -->
        <record model="ir.ui.view" id="view_order_form">
            <field name="name">sale.order.form.inherit.gard_x_propagate</field>
            <field name="model">sale.order</field>
            <field name="mode">extension</field>
            <field name="priority">10</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <!-- replace pricelist_id field to move it -->
                <xpath expr="//field[@name='pricelist_id']" position="replace"></xpath>
                <!-- add fields -->
                <xpath expr="/form//field[@name='order_line']" position="before">
                    <group name="propagate" col="3">
                        <group name="propagate_product">
                            <button name="%(action_view_product_propagate)d" type="action"
                            attrs="{'invisible':['|',('state', '!=', 'draft')]}"
                            class="btn-primary" string="Select Products"/>    
                        </group>
                        <group name="propagate_route">
                            <button name="button_propagate_route" type="object"
                                attrs="{'invisible':['|',('state', '!=', 'draft')]}"
                                class="btn-primary" string="Propagate Route"/>
                            <field name="route_id" string="Route" options="{'no_create_edit': True}"/>
                        </group>
                        <group name="propagate_pricelist">
                            <button name="button_propagate_pricelist" type="object"
                                attrs="{'invisible':['|',('state', '!=', 'draft')]}"
                                class="btn-primary" string="Propagate Pricelist"/>
                            <field name="pricelist_id" string="Pricelist" attrs="{'invisible': [('state', '!=', 'draft')]}" options="{'no_create_edit': True}"/>
                        </group>
                    </group>
                    <button name="button_order_line_unlink" type="object"
                        attrs="{'invisible':['|',('state', '!=', 'draft'),('order_line', '=', [])]}"
                        class="btn-default" string="Clear Lines"/>
                </xpath>
                
            </field>
        </record>

        <!-- Actions -->

        <!-- Menus -->

</odoo>
