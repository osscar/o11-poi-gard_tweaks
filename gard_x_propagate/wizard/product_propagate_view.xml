<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_product_propagate" model="ir.ui.view">
      <field name="name">product.propagate.form</field>
      <field name="model">product.propagate</field>
      <field name="arch" type="xml">
        <form string="Select Products">
          <group name="create_form">
            <notebook>
              <page name="line_ids" string="Select Products">
                <button name="button_product_ids_clear" type="object"
                  attrs="{'invisible':[('product_ids', '=', [])]}" class="btn-primary"
                  string="Clear Products" />
                <separator />
                <field name="product_ids" onstring="Select Products" domain="[('qty_available', '&gt;', 0)]">
                  <tree edit="false" create="true">
                    <field name="default_code" />
                    <field name="name" />
                    <field name="qty_available" />
                    <field name="virtual_available" />
                    <field name="uom_id" />
                  </tree>
                </field>
              </page>
            </notebook>
            <!-- domain="[('id', 'in', line_ids)]"/> -->
          </group>
          <group name="create_form_lines">
            <notebook>
              <page name="line_ids" string="Create Line Values">
                <button name="button_create_wizard_line" type="object" class="btn-primary"
                  string="Add Products" />
                <button name="button_wizard_line_unlink" type="object"
                  attrs="{'invisible':[('line_ids', '=', [])]}" class="btn-default"
                  string="Clear Lines" />
                <separator />
                <field name="line_ids">
                  <tree editable="bottom">
                    <field name="product_id" />
                    <field name="name" />
                    <field name="date_planned" />
                    <field name="product_qty" />
                    <field name="product_uoms" invisible="1" />
                    <field name="product_uom" domain="[('id', 'in', product_uoms)]" />
                    <field name="price_unit" />
                  </tree>
                </field>
              </page>
            </notebook>
          </group>
          <footer>
            <button string="Create" name="button_create_order_line" type="object"
              class="btn-primary" />
            <button string="Cancel" class="btn-default" special="cancel" />
          </footer>
        </form>
      </field>
    </record>

    <record id="action_view_product_propagate" model="ir.actions.act_window">
      <field name="name">Select Products</field>
      <field name="res_model">product.propagate</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_product_propagate" />
      <field name="target">new</field>
      <!-- <field name="binding_model_id" ref="purchase.model_purchase_order" /> -->
    </record>

  </data>
</odoo>