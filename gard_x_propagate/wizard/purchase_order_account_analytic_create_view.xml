<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_purchase_order_account_analytic_create" model="ir.ui.view">
            <field name="name">purchase.order.account.analytic.create.form</field>
            <field name="model">purchase.order.account.analytic.create</field>
            <field name="arch" type="xml">
                <form string="Create Analytic Accounts">
                    <group name="create_form">
                        <!-- <field name="order_account_line" domain="[('id', 'in', line_ids)]"/> -->
                    </group>
                    <group name="create_form_lines">
                        <notebook>
                            <page name="line_ids" string="Create Line Values">
                                <button name="button_create_line_default_values" type='object' class="btn-primary" string="Create Default"/>
                                <button name="button_wizard_line_unlink" type="object" attrs="{'invisible':[('line_ids', '=', [])]}" class="btn-default" string="Clear Lines"/>
                                <separator/>
                                <field name="line_ids">
                                    <tree>
                                        <field name="order_name"/>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="account_analytic_department_id"/>
                                        <field name="account_analytic_parent_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                    <footer>
                        <button string="Create" name="button_create_analytic_account" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_purchase_order_account_analytic_create" model="ir.actions.act_window">
            <field name="name">Create Analytic Accounts</field>
            <field name="res_model">purchase.order.account.analytic.create</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_purchase_order_account_analytic_create"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="purchase.model_purchase_order" />
        </record>

    </data>
</odoo>
