<?xml version="1.0"?>
<openerp>
    <data>

         <record id="product_product_tree_view" model="ir.ui.view">
            <field name="name">product.product.tree.inherit.gard_sale_price</field>
            <field name="model">product.product</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">

                <!-- product pricelist items button -->
                <xpath expr="//field[@name='default_code']" position="before">
                    <button name="button_product_pricelist_items"
                            string="Pricelist Items"
                            type="object"
                            icon="/gard_sale_price/static/src/img/icons/price_icon.png"/>
                </xpath>

            </field>
        </record>

        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">product.normal.form.inherit.gard_sale_price</field>
            <field name="model">product.product</field>
            <field name="mode">extension</field>
            <!-- <field eval="7" name="priority"/> -->
            <!-- <field name="inherit_id" ref="product.product_template_form_view"/> -->
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">

                <!-- product pricelist items -->
                <!-- <xpath expr="//page[@string='Sales']" position="after"> -->
                <page name="sales" position="after">
                    <page string="Sale Pricelist">
                        <!-- add field and view redirection -->
                        <field name="pricelist_item_ids" context="{'tree_view_ref' : 'gard_sale_price.product_pricelist_item_product_sale_price_view_tree'}" widget="one2many_list"/>
                    </page>
                </page>
                <!-- </xpath> -->

            </field>
        </record>


        <!-- Action Customizations -->

        <!-- Menu Customizations -->

    </data>
</openerp>
