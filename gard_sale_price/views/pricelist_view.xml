<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Search Views -->
        <record id="product_pricelist_item_view_search" model="ir.ui.view">
            <field name="name">product.pricelist.item.search</field>
            <field name="model">product.pricelist.item</field>
            <field name="arch" type="xml">

                <search string="Search Pricelist Items">
                    <field name="name" filter_domain="['|','|','|',('name','ilike',self),('product_id','ilike',self),('price_version_id','ilike',self),('partner_ids','ilike',self)]"/>
                    <field name="product_id"/>
                    <field name="price_version_id"/>
                    <field name="partner_ids"/>
                    <group expand="0" string="Group By">
                        <filter string="Product" domain="[]" name="product" context="{'group_by':'product_id'}"/>
                        <filter string="Pricelist Version" name="price_version_id" domain="[]" context="{'group_by':'price_version_id'}"/>
                        <filter string="Partner" domain="[]" context="{'group_by':'partner_ids'}"/>
                        <filter string="Active" name="active_version_true" domain="[('active_version', '=', True)]" context="{}"/>
                        <filter string="Inactive" name="active_version_false" domain="[('active_version', '=', False)]" context="{}"/>
                        <filter string="Partner Rules" name="partner_rules" domain="[('partner_ids', '!=', False)]" context="{}"/>
                    </group>
               </search>

            </field>
        </record>

        <record id="product_pricelist_version_view_search" model="ir.ui.view">
            <field name="name">product.pricelist.version.search</field>
            <field name="model">product.pricelist.version</field>
            <field name="arch" type="xml">

                <search string="Search Pricelist Versions">
                    <field name="name" filter_domain="['|',('name','ilike',self),('items_id','ilike',self),('pricelist_id','ilike',self),('partner_ids','ilike',self)]"/>
                    <field name="items_id"/>
                    <field name="pricelist_id"/>
                    <field name="partner_ids"/>
                    <group expand="0" string="Group By">
                        <filter string="Pricelist" name="pricelist_id" domain="[]" context="{'group_by':'pricelist_id'}"/>
                        <filter string="Partner" domain="[]" context="{'group_by':'partner_ids'}"/>
                        <filter string="All" name="active_all" domain="['|', ('active', '=', True), ('active', '=', False)]" context="{}"/>
                        <filter string="Inactive" name="active_false" domain="[('active', '=', False)]" context="{}"/>
                        <filter string="Partner Rules" name="partner_rules" domain="[('partner_ids', '!=', False)]" context="{}"/>
                    </group>
               </search>

            </field>
        </record>

        <!-- Views -->
        <!-- Custom pricelist item tree view for product template view -->
        <record id="product_pricelist_view" model="ir.ui.view">
            <field name="name">product.pricelist.form.inherit.gard_sale_price</field>
            <field name="model">product.pricelist</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='items_id']" position="replace">
                    <field name="items_id" context="{'tree_view_ref' : 'gard_sale_price.product_pricelist_item_view_tree'}"/>
                </xpath>

                <xpath expr="//field[@name='version_id']" position="replace">
                    <field name="version_id" context="{'type' : type}"/>
                </xpath>

            </field>
        </record>

        <record id="product_pricelist_version_form_view" model="ir.ui.view">
            <field name="name">product.pricelist.version.form.inherit.gard_sale_price</field>
            <field name="model">product.pricelist.version</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_pricelist_version_form_view"/>
            <field name="arch" type="xml">

                <!-- redirect pricelist items view -->
                <xpath expr="//field[@name='items_id']" position="replace">
                    <field name="items_id" context="{'tree_view_ref' : 'gard_sale_price.product_pricelist_item_view_tree'}"/>
                </xpath>

                <!-- related partner field -->
                <xpath expr="//field[@name='pricelist_id']" position="after">
                    <field name="partner_ids" widget="many2many_tags"/>
                </xpath>

            </field>
        </record>

        <record id="product_pricelist_version_tree_view" model="ir.ui.view">
            <field name="name">product.pricelist.version.tree.inherit.gard_sale_price</field>
            <field name="model">product.pricelist.version</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_pricelist_version_tree_view"/>
            <field name="arch" type="xml">

                <!-- add 'active' field to relate attributes to field on tree -->
                <xpath expr="//field[@name='name']" position="before">
                    <field invisible="1" name="active"/>
                </xpath>

                <!-- tree view colors -->
                <xpath expr="//tree[1]" position="attributes">
                    <attribute name="colors">gray:active == False; orangered:partner_ids</attribute>
                    <!-- needs 'active' field in view to use -->
                    <!-- <attribute name="colors">gray:active == False</attribute> -->
                </xpath>

                <!-- related partner field -->
                <xpath expr="//field[@name='pricelist_id']" position="after">
                    <field name="partner_ids" attrs="{'invisible': [('partner_ids', '=', [])]}"/>
                </xpath>

            </field>
        </record>

        <!-- Custom pricelist item tree view for product template view -->
        <record id="product_pricelist_item_product_sale_price_view_tree" model="ir.ui.view">
            <field name="name">product.pricelist.item.product.sale.price.tree.gard_sale_price</field>
            <field name="model">product.pricelist.item</field>
            <field name="view_mode">tree</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">

                <tree string="Pricelist Items" create="0" edit="0" delete="0" editable="bottom" colors="orangered:partner_ids not False">
                    <!-- <field invisible="1" name="active_version"/> -->
                    <field name="sequence"/>
                    <field colspan="4" name="name"/>
                    <field name="min_quantity"/>
                    <field name="pricelist_currency"/>
                    <field name="sale_price"/>
                    <field name="unit_price"/>
                    <!-- <field name="customer_savings"/> -->
                    <field name="price_version_id"/>
                    <!-- column invisible if empty list [] unfortunately doesn't hide column, it only hides "0 entries" (empty list []) value -->
                    <field name="partner_ids" attrs="{'invisible': [('partner_ids', '=', [])]}"/>
                </tree>

            </field>
        </record>

        <record id="product_pricelist_item_view_tree" model="ir.ui.view">
            <field name="name">product.pricelist.item.tree.gard_sale_price</field>
            <field name="model">product.pricelist.item</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">

                <tree string="Pricelist Items" colors="gray:active_version == False; orangered:partner_ids" fonts="italic: active_version == False">
                <!-- <tree string="Pricelist Items" colors="orangered:partner_ids)"> -->
                    <field invisible="1" name="active_version"/>
                    <field name="product_id"/>
                    <field name="sequence"/>
                    <field colspan="4" name="name"/>
                    <field name="min_quantity"/>
                    <field name="pricelist_currency"/>
                    <field name="sale_price"/>
                    <field name="unit_price"/>
                    <!-- <field name="customer_savings"/> -->
                    <field name="price_version_id"/>
                    <field name="partner_ids"/>
                </tree>

            </field>
        </record>

        <record id="product_pricelist_item_form_view" model="ir.ui.view">
            <field name="name">product.pricelist.item.form.inherit.gard_sale_price</field>
            <field name="model">product.pricelist.item</field>
            <field name="mode">extension</field>
            <field name="priority">15</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
            <field name="arch" type="xml">

                <!-- add some fields -->
                <xpath expr="//group[1]" position="after">
                    <separator/>
                    <group col="2">
                        <field name="active_version"/>
                        <field name="pricelist_currency"/>
                        <field name="sale_price" class="oe_inline" widget='monetary' options="{'currency_field': 'pricelist_currency', 'field_digits': True}"/>
                        <field name="unit_price" class="oe_inline" widget='monetary' options="{'currency_field': 'pricelist_currency', 'field_digits': False}"/>
                        <!-- <field name="customer_savings"/> -->
                        <field name="partner_ids" widget="many2many_tags" />
                        <!-- colors="orangered:partner_ids not False" -->
                        <field name="price_version_id"/>
                    </group>
                </xpath>

            </field>
        </record>

        <!-- Action Customizations -->
        <record id="product_pricelist_item_action_view_tree" model="ir.actions.act_window">
            <field name="name">Pricelist Items</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.pricelist.item</field>
            <field name="view_id" ref="gard_sale_price.product_pricelist_item_view_tree"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="context">{'search_default_active_version_true': 1}</field>
            <field name="search_view_id" ref="gard_sale_price.product_pricelist_item_view_search"/>
        </record>

        <record id="product_pricelist_action" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <!-- <field name="context">{'search_default_active_true': 1}</field> -->
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="gard_sale_price.product_pricelist_version_view_search"/>
            <field name="act_window_id" ref="product.product_pricelist_action"/>
        </record>

        <!-- Menu Customizations -->
        <menuitem
            id="product_pricelist_item_menu_item_tree"
            name="Pricelist Items"
            parent="product.menu_product_pricelist_main"
            action="product_pricelist_item_action_view_tree"
            sequence="1"
            groups="gard_tweaks.group_pricelist_manager,base.group_sale_salesman"/>

        <record id="base.menu_base_config" model="ir.ui.menu">
          <field name="groups_id" eval="[(4,ref('base.group_sale_salesman'))]"/>
        </record>

        <record id="product.menu_product_pricelist_main" model="ir.ui.menu">
          <field name="groups_id" eval="[(4,ref('base.group_sale_salesman'))]"/>
        </record>

        <record id="product.menu_product_pricelist_action" model="ir.ui.menu">
          <field name="groups_id" eval="[(6,0,[ref('product.group_sale_pricelist')])]"/>
          <field name="groups_id" eval="[(6,0,[ref('gard_tweaks.group_pricelist_manager')])]"/>
        </record>

        <record id="product.menu_product_pricelist_action2" model="ir.ui.menu">
          <field name="groups_id" eval="[(6,0,[ref('product.group_sale_pricelist')])]"/>
          <field name="groups_id" eval="[(6,0,[ref('gard_tweaks.group_pricelist_manager')])]"/>
        </record>

        <record id="product.menu_product_price_type" model="ir.ui.menu">
          <field name="groups_id" eval="[(6,0,[ref('product.group_sale_pricelist')])]"/>
          <field name="groups_id" eval="[(6,0,[ref('gard_tweaks.group_pricelist_manager')])]"/>
        </record>

    </data>
</openerp>
