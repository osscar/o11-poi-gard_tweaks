<?xml version="1.0"?>
<openerp>
    <data>

        <!-- View Customizations -->
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">view.order.form.inherit.gard_sale_price</field>
            <field name="model">sale.order</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <!-- product pricelist items button -->
                <xpath expr="//tree[@string='Sales Order Lines']/field[last()]" position="after">
                    <button name="button_product_pricelist_items"
                            attrs="{'invisible': [('state', 'not in', ['draft', 'sent'])]}"
                            string="Pricelist Items"
                            type="object"
                            icon="/gard_sale_price/static/src/img/icons/price_icon.png"/>
                </xpath>

            </field>
        </record>

        <!-- Action Customizations -->

        <!-- Menu Customizations -->

    </data>
</openerp>
