<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Search Views -->
    <record id="view_picking_internal_search" model="ir.ui.view">
        <field name="name">stock.picking.internal.search.inherit.gard_internal_consumption</field>
        <field name="model">stock.picking</field>
        <field name="mode">extension</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">

            <xpath expr="//filter[@name='late']" position="before">
                <filter name="is_internal_consumption" string="Internal Consumption" domain="[('is_internal_consumption','=', 'True')]" help="Pickings for internal consumption"/>
                <separator/>
            </xpath>

        </field>
    </record>

    <!-- Views -->
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.gard_internal_consumption</field>
        <field name="model">stock.picking</field>
        <field name="mode">extension</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet/h1[1]" position="after">
                <label string="Internal Consumption" attrs="{'invisible': [('is_internal_consumption', '=', False)]}"/>
            </xpath>

            <xpath expr="//page[@name='extra']/group[1]" position="before">
                <group attrs="{'invisible': [('is_internal_consumption', '=', 'False')]}">
                    <field name="is_internal_consumption"/>
                </group>
            </xpath>

        </field>
    </record>

    <record id="vpicktree" model="ir.ui.view">
        <field name="name">stock.picking.tree.inherit.gard_internal_consumption</field>
        <field name="model">stock.picking</field>
        <field name="mode">extension</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">

            <xpath expr="//tree/field[1]" position="before">
                <field name="is_internal_consumption" string="InCon" attrs="{'invisible': [('is_internal_consumption', '=', False)]}"/>
            </xpath>

        </field>
    </record>

    <!-- Actions -->

    <!-- Menus -->

</odoo>
