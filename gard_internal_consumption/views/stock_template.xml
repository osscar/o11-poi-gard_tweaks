   <template id="message_head_inc">
        <t>
            <strong>Internal consumption</strong>
        </t>
    </template>

    <template id="message_body_inc">
        <p>This <t t-esc="self.env['ir.model']._get(self._name).name.lower()"/> is an internal consumption from:
            <t t-foreach="origin" t-as="o">
                <a href="#" t-att-data-oe-model="o._name" t-att-data-oe-id="o.id"> <t t-esc="o.display_name"/></a><span t-if="origin.ids[-1:] != o.ids">, </span>
            </t>
        </p>
    </template>

    <template id="track_internal_consumption_move">
        <div>
            <t t-call="gard_internal_consumption.message_head_inc"/>
            <t t-call="gard_internal_consumption.message_body_inc"/>
        </div>
    </template>

</odoo>
